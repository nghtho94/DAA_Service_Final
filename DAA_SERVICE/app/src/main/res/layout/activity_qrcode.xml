<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_qrcode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.tho.daa_service.Activities.QRCodeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan QR Code to start authentication"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>

    <ImageView

        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/img_qr_code_image"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_qrcode"
        android:layout_marginTop="20dp"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_online_exit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="15dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="2dp"
        fancy:fb_defaultColor="@color/fbutton_color_wet_asphalt"
        fancy:fb_focusColor="#8cc9f8"
        fancy:fb_fontIconResource="&#xf00d;"
        fancy:fb_fontIconSize="25sp"
        fancy:fb_iconPosition="top"
        fancy:fb_radius="10dp"
        fancy:fb_text="Exit"
        fancy:fb_textColor="#FFFFFF">

    </mehdi.sakout.fancybuttons.FancyButton>

</LinearLayout>
