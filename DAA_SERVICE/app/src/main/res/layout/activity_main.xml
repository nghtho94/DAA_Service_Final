    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_main_profile"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#7ab800"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#FFFFFF"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_fontIconResource="&#xf0f6;"
        fancy:fb_fontIconSize = "25dp"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text=" PROFILE INFOMATION"

        fancy:fb_textColor="#7ab800"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:gravity="center" >

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_newCre"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            fancy:fb_defaultColor="#55acee"
            fancy:fb_focusColor="#313131"
            fancy:fb_fontIconResource="&#xf021;"
